<div class="min-h-screen relative">

  <div id="review-form" class="sticky bottom-0 bg-white text-black p-4 shadow-md rounded-md w-full md:w-80 mx-auto">
    <h2 class="text-lg font-bold mb-3">レビュー投稿</h2>
    <div>
      <h2 class="text-sm mb-2">※ログインしてから投稿してください</h2>
      <%= form_with model: @review, url: movie_reviews_path(@movie) do |f| %>
          <%= f.label :body, class: "form-label" %>
          <%= f.text_area :body, class: "form-control mb-3 bg-white", rows: "4", placeholder:"レビュー本文" %>
          <%= f.submit '投稿', class: "rounded-lg bg-orange-400 text-black w-20 h-10" %>
      <% end %>
    </div>
  </div>
</div>
