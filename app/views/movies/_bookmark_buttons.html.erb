<div class = "bg-orange-400 text-white">
<% if current_user %>
  <% if current_user.bookmark?(@movie) %>
    <%= render 'unbookmark', { movie: @movie } %>
  <% else %>
    <%= render 'bookmark', { movie: @movie } %>
  <% end %>
<% else %>
<%= link_to 'ブックマークしよう！', user_session_path, class: 'btn btn-primary' %>
<% end %>
