  <div class = "bg-orange-400 text-white ">
  <% if current_user %>
    <% if current_user.watched?(@movie) %>
      <%= render 'unwatched', { movie: @movie } %>
    <% else %>
      <%= render 'watched', { movie: @movie } %>
    <% end %>
  <% else %>
    <%= link_to 'ログインして', user_session_path, class: 'btn btn-primary' %>
  <% end %>
</div>