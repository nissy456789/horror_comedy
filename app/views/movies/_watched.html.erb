<%= form_with url: watcheds_path, method: :post, local: true, id: "watched-form-for-movie-#{@movie.id}" do |form| %>
  <%= form.hidden_field :movie_id, value: @movie.id %>
  <%= form.submit '観た！', class: 'group relative inline-flex h-12 items-center justify-center overflow-hidden rounded-md border border-neutral-200 bg-transparent px-6 font-medium text-black transition-all duration-100 [box-shadow:5px_5px_rgb(82_82_82)] hover:translate-x-[3px] hover:translate-y-[3px] hover:[box-shadow:0px_0px_rgb(82_82_82)]' %>
<% end %>