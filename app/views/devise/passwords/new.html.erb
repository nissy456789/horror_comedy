<div class="h-screen bg-black text-white flex items-center justify-center">
  <div class="bg-white text-black p-8 rounded-lg shadow-lg w-full max-w-md text-center">
    <h2 class="text-2xl font-bold mb-4text-black">パスワードリセット</h2>

    <%= form_for(resource, as: resource_name, url: user_password_path(resource_name), html: { method: :post, class: "space-y-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class: "block text-left mb-1 font-semibold" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 rounded-md border border-gray-600 focus:outline-none focus:ring-2 focus:ring-orange-500 bg-white text-black" %>
      </div>

      <div class="actions">
        <%= f.submit "送信する", class: "w-full bg-orange-500 hover:bg-orange-600 text-white font-bold py-2 px-4 rounded-md shadow-md" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
