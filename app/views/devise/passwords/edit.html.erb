<div class="flex items-center justify-center h-screen bg-black">
  <div class="bg-white shadow-md rounded px-8 py-6 w-full max-w-md">
    <h2 class="text-3xl font-bold text-center mb-6 text-black">パスワード再設定</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, "新しいパスワード", class: "block text-lg font-medium text-gray-700" %><br />
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> 文字以上</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "bg-white mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-orange-500 focus:border-orange-500" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "パスワード確認", class: "block text-lg font-medium text-gray-700" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "bg-white mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-orange-500 focus:border-orange-500" %>
      </div>

      <div class="actions">
        <%= f.submit "パスワードを変更する", class: "w-full py-2 px-4 bg-orange-400 hover:bg-orange-500 text-black font-bold rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-500 focus:ring-offset-2"  %>
      </div>
    <% end %>
    <div class ="mt-14">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>