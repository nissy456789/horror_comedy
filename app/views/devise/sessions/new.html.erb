<div class="flex items-center justify-center h-screen bg-black">
  <div class="bg-white shadow-md rounded px-8 py-6 w-full max-w-md">
    <h2 class="text-3xl font-bold text-center mb-6">ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <div class="field">
        <%= f.label :email, "メールアドレス", class: "block text-lg font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-orange-500 focus:border-orange-500" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード", class: "block text-lg font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-orange-500 focus:border-orange-500" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: "w-full py-2 px-4 bg-orange-500 hover:bg-orange-600 text-white font-bold rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-500 focus:ring-offset-2" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
