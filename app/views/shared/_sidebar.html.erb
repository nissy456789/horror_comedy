<div class="relative">

  <!-- サイドバーコンテンツ (画面サイズが1024px以上の時) -->
  <div class="hidden lg:block fixed top-0 left-0 h-full w-1/7 bg-black text-black">

    <ul class="list-none font-bold">
    <li class="px-4 py-2 hover:bg-gray-100 flex items-center ">
      <%= link_to movies_path, class: "block text-black flex items-center inline-block bg-orange-400 px-2 py-1" do %>
        <%= image_tag 'film.jpg', style: "width: 50px; height: auto; margin-right: 10px;" %>
        作品一覧
      <% end %>
    </li>

    <li class="px-4 py-2 hover:bg-gray-100 flex items-center ">
      <%= link_to ranking_watcheds_path, class: "block text-black flex items-center inline-block bg-orange-400 px-2 py-1" do %>
        <%= image_tag 'ranking.jpg', style: "width: 50px; height: auto; margin-right: 10px;" %>
        ランキング
      <% end %>
    </li>

    <li class="px-4 py-2 hover:bg-gray-100 flex items-center ">
      <%= link_to recommends_path, class: "block text-black flex items-center inline-block bg-orange-400 px-2 py-1" do %>
        <%= image_tag 'recomend.jpg', style: "width: 50px; height: auto; margin-right: 10px;" %>
        あなたへオススメ
      <% end %>
    </li>

    <li class="px-4 py-2 hover:bg-gray-100 flex items-center ">
      <%= link_to bookmarks_path, class: "block text-black flex items-center inline-block bg-orange-400 px-2 py-1" do %>
        <%= image_tag 'bookmark.jpg', style: "width: 50px; height: auto; margin-right: 10px;" %>
        ブックマーク一覧
      <% end %>
    </li>

    <% if user_signed_in? %>
      <li class="px-4 py-2 hover:bg-gray-100 flex items-center ">
        <%= link_to  user_path(current_user), class: "block text-black flex items-center inline-block bg-orange-400 px-2 py-1" do %>
          <%= image_tag 'user.jpg', style: "width: 50px; height: auto; margin-right: 10px;" %>
          マイページ
        <% end %>
      </li>
      <li class="px-6 py-3 border-gray-300 hover:bg-gray-100">
          <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "inline-block bg-orange-400 px-2 py-1 text-black" %>
      </li>
    <% else %>
      <li class="px-4 py-2 hover:bg-gray-100 flex items-center ">
          <%= link_to   user_session_path, class: "block text-black flex items-center inline-block bg-orange-400 px-2 py-1" do %>
            <%= image_tag 'user.jpg', style: "width: 50px; height: auto; margin-right: 10px;" %>
            ログイン
          <% end %>
      </li>
    <% end %>

      <li class="px-6 py-3 hover:bg-gray-100">
        <%= link_to "お問合せ", "https://forms.gle/zsRgRHCv9Box48jT6", class: "inline-block bg-gray-400 px-2 py-1 text-white" %>
      </li>
      <li class="px-6 py-3 hover:bg-gray-100">
        <%= link_to "プライバシーポリシー", "https://www.kiyac.app/privacypolicy/iKJlBH2wuM9NGRhYexTb", class: "inline-block bg-gray-400 px-2 py-1 text-white" %>
      </li>
    </ul>
  </div>
</div>